{% extends 'CopiaincollaMetaTagsBundle::layout.html.twig' %}

{% block main %}
    <div class="row">
        <div class="span12">
            <form action="{{ (entity.id) ? path('admin_metatag_update', {id: entity.id}) : path('admin_metatag_create') }}" method="post" {{ form_enctype(form) }} class="form form-horizontal form-metatag-edit" novalidate>
                {{ form_errors(form) }}

                <fieldset>

                    <legend class="title">
                        {{ (entity.id) ? 'Modifica meta tag "'~entity.url~'"' : 'Nuovo meta tag'}}
                    </legend>

                    {{ (entity.id) ? "" : form_row(form.url)}}
                    {{ form_row(form.title) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.keywords) }}
                    {{ form_row(form.author) }}

                    <hr>

                    <button type="submit" class="btn">
                        <i class="icon-ok"></i>
                        Salva
                    </button>

                    {% if ((entity.id)) %}
                        <a href="{{ path('admin_metatag_delete', {'id': entity.id}) }}" class="btn" onclick="return confirm('Are you sure you want to delete this url?');">
                            <i class="icon-remove icon-red"></i> elimina
                        </a>
                    {% endif %}
                    <a href="{{ path('admin_metatag') }}" class="btn">
                        <i class="icon-chevron-left"></i>
                        Torna alla lista
                    </a>

            </fieldset>
            {{ form_row(form._token) }}
        </form>
        </div>
    </div>

{% endblock %}

{% block footerJavascripts %}
    {{ parent() }}
    <script src="{{ asset('/bundles/copiaincollametatags/select2-release-3.2/select2.min.js') }}" type="text/javascript"></script>

    <script>
        $(function() {
            $('#{{ form.route.vars.id }}').select2({
                placeholder: "Seleziona una rotta",
                allowClear: true,
                dropdownCss: {'width': 'auto'}
            });

            // workaround per mostrare la ricerca della select. Esiste una regola che gli da display block
            $('.select2-drop').addClass('search-box-display');
        });

    </script>
{% endblock footerJavascripts %}

