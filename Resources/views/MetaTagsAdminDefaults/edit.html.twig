{% extends 'CopiaincollaMetaTagsBundle::layout.html.twig' %}

{% block main %}

    <h1>Edit meta tag defaults</h1>

    <form action="{{ path('admin_metatag_defaults_update') }}" method="post" {{ form_enctype(form) }} class="form form-horizontal form-metatag-edit" novalidate>

        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.keywords) }}
        {{ form_row(form.author) }}

        {{ form_row(form.language) }}
        {{ form_row(form.robots) }}
        {{ form_row(form.googlebot) }}

        {{ form_row(form.ogTitle) }}
        {{ form_row(form.ogDescription) }}
        {{ form_row(form.ogImage) }}

        <br>

        <button type="submit">
            Save
        </button>
        <a href="{{ path('admin_metatag_defaults') }}">
            Back
        </a>
        {{ form_rest(form) }}
    </form>

{% endblock %}
